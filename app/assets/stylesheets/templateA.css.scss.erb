// colors

$white: #fff;
$black: #000;
$bluegreen:#1abc9c;
$yellow:#F1C40F;
$darkblue:#34495E;
$gray:#7f8c8d;
$lightgray:#95a5a6;
$transparent-blue:rgba(215, 44, 44, 0.5);
$transparent-red:rgba(26, 107, 255, 0.5);

//mixin

@mixin border-radius($radius) {
  -webkit-border-radius: $radius;
     -moz-border-radius: $radius;
      -ms-border-radius: $radius;
          border-radius: $radius;
}

@mixin box-shadow{
  -webkit-box-shadow: 0px 0px 20px 0px rgba(50, 50, 50, 0.75);
    -moz-box-shadow:    0px 0px 20px 0px rgba(50, 50, 50, 0.75);
      box-shadow:         0px 0px 20px 0px rgba(50, 50, 50, 0.75);
}

@mixin transition{
  -webkit-transition: all 1s ease;
    -moz-transition: all 1s ease;
      -o-transition: all 1s ease;
        -ms-transition: all 1s ease;
          transition: all 1s ease;
}

@mixin posrelative($topnum){
  position:relative;
  top: $topnum;
}

.orbit-timer{
  display:none;
}

.flash{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 10;
  margin-top:50px;
}

.error{
  margin:0;
  background-color: $transparent-blue;
  color:$white;
  padding:15px;
  text-align:center;
  font-size:20px;
}
.notice{
  @extend .error;
  background-color: $transparent-red;
}

.layer{
  position:relative;
  margin-top:-57%;
  width:100%;
  height:668px;
  background:{
    color: rgba(0, 68, 108, 0.4);
    image: url('<%= asset_path("templateA/pattern.png") %>');
    repeat: repeat, no-repeat;
    position: center center;
    size: auto, cover;
  }
}

.head-ft{
  background-color: rgba(0, 0, 0, 0.3);
  padding:1%;
  position:relative;
  left:5%;
  margin-bottom:4%;

  p{
    margin:2% 0 2% 0;
    font-size:18px;
  }

}
.head-foot-title{
  color:$white;
  font-size:24px;
  margin:5% 0 0 -25%;
}

.head-i{
  color:$yellow;
  margin-left:-25%;
  font:{
    style:italic;
    weight:bold;
    size:28px;
  }
}

.space{
  margin:5%;
}

.logo-quote{
  position:relative;
  top:-130px;
}

.layer-intro{
  @include posrelative(2px);
  color:$white;

    .logo{
      margin:5% 1% 0 1%;
      width:240px;
      height:75px;
    }

    .phone{
      @include posrelative(-130px);
      background-color:$white;
      @include border-radius(5px);
      @include box-shadow;
    }

    .layer-headT{
      color:$white;
      @include posrelative(20px);
    }

    h2{
      margin-top:15%;
      color:$white;
    }

    .head-subtitle{
      color:$white;
      font-size:20px;
    }
}

.phone-content{
  margin:7% 0 0 5%;
  height:500px;
}

.form{
  margin:0 5% 0 0;
}

.form .tt{
  height:45px;
  border:1px solid $bluegreen;
  @include border-radius(5px);
  color: $bluegreen;
  margin:4% 0 4% 0;

  &:focus{
    border:1px solid $yellow;
    box-shadow: none;
  }

}
::-webkit-input-placeholder {
   color: $bluegreen;
}

:-moz-placeholder {
   color: $bluegreen;
}

::-moz-placeholder {
  color: $bluegreen;
}

:-ms-input-placeholder {
   color:$bluegreen;
}

.form .register-button{
  background-color:$yellow;
  @include border-radius(5px);
  width:350px;
  height:55px;
  border:none;
  color:white;
  font:{
    size:18px;
    weight:bold;
  }

  &:hover{
    background-color:$bluegreen;
  }
}
.phone-title{
  color:$darkblue;
  font-size:25px;
  margin:0 0 1% 0;
}
.phone-quote{
  color:$gray;
  font-size:14px;
  margin:0 10% 5% 0;
}

.features{
  background-size:cover;
  margin:0 0 -0.28% -5%;

  .arrow-down{
    width:60px;
    height:50px;
    margin-bottom:10%;
  }

  h1{
    margin-top:3%;
    color:$darkblue;
  }

  span{
    color: $bluegreen;
    font:{
      weight:bold;
      size:50px;
    }
  }

  h3{
    color:$darkblue;
  }

  p{
    color:$lightgray;
  }

  .features-icons{
    width:100px;
    height:95px;
    @include transition;

    &:hover{
      @include border-radius(115px);
      background-color:$yellow;
    }
  }
}

.modules{
  background: url('<%= asset_path("templateA/41.jpg") %>');
  height:700px;
  background:{
    repeat:no-repeat;
    size:cover;
    attachment:fixed;
  }

  h1{
    margin-top:10%;
   color:$white;
  }

  span{
    font-weight:bold;
    color:$yellow;
  }

  .sub-module{
    color:$white;
    font-size:20px;
    text-align:right;
  }

  h4{color:$darkblue;}

  p{
    color:$lightgray;
    font-size:17px;
    margin:0 8% 0 8%;
  }

  .module-icons{
    margin-top:4%;
    width:65px;
    height:60px;
  }
}

.layer-modules{
  background-color:rgba(0, 68, 108, 0.6);
  height:700px;
}

.modules-box{
  background-color:$white;
  border:1px solid $yellow;
  @include border-radius(10px);
  margin:13% 10% 0 10%;
  width:330px;
  height:340px;
}

.arrow-icon{
  width:100px;
  height:100px;
  margin:60% 0 0 80%;
}

.quote{
  height:250px;
  background-size:cover;

  h1{
    margin-top:5%;
    color:$darkblue;
    text-align:center;
  }

  span{
    color: $yellow;
  }

  h4{
    color:$darkblue;
    text-align:center;
  }

}

.footer{
  background-color:#1A2531;
  border-bottom:3px solid $yellow;

  p{
    color: $yellow;
      margin-top:1%;
      text-align:center;
  }
}

.bought{
  background-color:#1A2531;
  height:300px;
  border-top:2px solid $yellow;

  .layer-bought{
    background-color:rgba(20,23,32,0.6);
    height:300px;
  }

  h1{
    color:$white;
    margin:5%;
  }

  p{
    color:$white;
    font-size:20px;
    text-align:center;
  }

  .button{
    height:50px;
    margin-left:10%;
    background-color:transparent;
    font-weight:bold;
    border:3px solid $bluegreen;
    color:$bluegreen;
   @include border-radius(3px);

    &:hover{
      background-color:$yellow;
      color:$white;
      border:3px solid $yellow;
      font-weight:bold;
    }
  }
}

